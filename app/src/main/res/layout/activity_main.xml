<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.hi_tech.xmaslights.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tit"
            android:textOn=""
            android:textOff=""
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:onClick="iniciar"/>

        <Button
            android:id="@+id/btnDetener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tit"
            android:textOn=""
            android:textOff=""
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:onClick="detener"/>

        <ToggleButton
            android:id="@+id/tgbtnTune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tit"
            android:textOn=""
            android:textOff=""
            android:layout_marginTop="15dp"
            android:onClick="tonito"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lights Start"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="#002210"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lights Stop"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="#002210"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music on/off"
            android:textSize="12sp"
            android:textColor="#002210"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="283dp"
        android:layout_height="148dp"
        android:background="@drawable/cartel"
        android:id="@+id/imageView2" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="192dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.61">

        <ImageView
            android:layout_width="192dp"
            android:layout_height="170dp"
            android:background="@drawable/radiobox"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="26dp" />

    </RelativeLayout>

</LinearLayout>
